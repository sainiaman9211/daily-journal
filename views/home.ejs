<%- include("partials/header") %>

<h1>Home</h1>

<p><%= startingContent %></p>

<% post.forEach(function(postItem){ %>
   
    <h1><%= postItem.title %></h1>
    <% if ((postItem.content).length > 60) { %>
       <% postItem.content = (postItem.content).substring(0, 120) + "...";  %> 
    <% } %>
     
    <p style="display: inline;"><%=postItem.content %></p>
    <a href="/posts/<%=postItem.title %>">Read More</a>
<% }) %>

<%- include("partials/footer") %>